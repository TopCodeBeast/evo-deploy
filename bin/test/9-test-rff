# event 1 heco
ids=(
# "0x2a040001040001010000000000000004000000000000000000000000000006a5"
"0x2a04000104000101000000000000000400000000000000000000000000000616"  # done
"0x2a04000104000101000000000000000400000000000000000000000000000319"  # done
# "0x2a040001040001010000000000000004000000000000000000000000000005dc"
# "0x2a040001040001010000000000000004000000000000000000000000000004fb"
# "0x2a0400010400010100000000000000040000000000000000000000000000076e"
# "0x2a040001040001010000000000000004000000000000000000000000000006f3"
# "0x2a04000104000101000000000000000400000000000000000000000000000768"
# "0x2a04000104000101000000000000000400000000000000000000000000000539"
# "0x2a040001040001010000000000000004000000000000000000000000000001dc"
"0x2a04000104000101000000000000000400000000000000000000000000000166"  # done
  )

addrs=(
"0xe32c5673b152571e57976bf3a75068917da2da9c"
"0x735182c782cb8e7806f8903de7913e6880cbf82e"
"0x1e6736dda0a9bbc224d08e1db29934e19e55fd49"
  )

## claim land from genesis holder
# for id in "${ids[@]}"; do
#   echo $id
#   evo mkt-gen claim $id --chain heco
# done

from=0x7aE77149ed38c5dD313e9069d790Ce7085caf0A6
for index in {0..2}; do
  to="${addrs[$index]}"
  id="${ids[$index]}"
  p "$id" "$to" 
  evo cmn-tkn transferFrom "$from" "$to" "$id" --chain heco
done

