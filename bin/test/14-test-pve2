#!/usr/bin/env bash

set -e

. $(PWD)/bin/init

p() { printf "%-15s %-52s \n" "$1" "$2"; }
apo_attr() {
    sig="tokenId2Apostle(uint256)(uint256,uint256,uint256,uint256,uint256,uint16,uint16,uint48,uint48,uint48,uint48,uint256,uint256)"
    keys=("genes" "talents" "matronId" "sireId" "siringWithId" "cooldownIndex" "generation" "birthTime" "activeTime" "deadTime" "cooldownEndTime" "class" "preferExtra")
    apostle=$(seth call "$APOSTLEBASE_PROXY" "$sig" "${1?}")
    for i in "${!keys[@]}"; do
      ((idx="$i"+1))
      value=$(echo $apostle | cut -d' ' -f "$idx")
      p "${keys[i]}" "$value"
    done
}

