#!/usr/bin/env bash

set -e

. $(PWD)/bin/init

lib="apostle"
# ApostleBaseV2
sig="initializeContract(address)"
APOSTLEBASE_PROXY=$(deployProxy "$lib" src/proxy/ApostleBaseProxy.sol:ApostleBaseProxy contracts/ApostleBaseV2.sol:ApostleBaseV2 "$sig" "$SETTINGSREGISTRY")
register "addr" "CONTRACT_APOSTLE_BASE" "$APOSTLEBASE_PROXY"
seth send $INTERSTELLARENCODERV4 "registerNewObjectClass(address,uint8)" $APOSTLEBASE_PROXY $(seth --to-hex 2) 

# ApostleClockAuction
sig="initializeContract(address)"
APOSTLECLOCKAUCTION_PROXY=$(deployProxy "$lib" src/proxy/ApostleClockAuctionProxy.sol:ApostleClockAuctionProxy contracts/ApostleClockAuction.sol:ApostleClockAuction "$sig" "$SETTINGSREGISTRY")
register "addr" "CONTRACT_APOSTLE_AUCTION" "$APOSTLECLOCKAUCTION_PROXY"

# Gen0ApostleV2
gen0Limit=$(loadConf ".apostle.gen0Limit")
operator=$(loadConf ".apostle.operator")
sig="initializeContract(address,uint256)"
GEN0APOSTLE_PROXY=$(deployProxy "$lib" src/proxy/Gen0ApostleProxy.sol:Gen0ApostleProxy contracts/Gen0ApostleV2.sol:Gen0ApostleV2 "$SETTINGSREGISTRY" "$sig" "$gen0Limit")
seth send $GEN0APOSTLE_PROXY "setOperator(address)" $operator

# SiringClockAuctionV2
sig="initializeContract(address)"
SIRINGCLOCKAUCTION_PROXY=$(deployProxy "$lib" src/proxy/SiringClockAuctionProxy.sol:SiringClockAuctionProxy contracts/SiringClockAuctionV2.sol:SiringClockAuctionV2 "$sig" "$SETTINGSREGISTRY")
register "addr" "CONTRACT_SIRING_AUCTION" "$SIRINGCLOCKAUCTION_PROXY"

# ApostelSettingIds
register "uint" "UINT_AUTOBIRTH_FEE" "$(loadConf ".apostle.birthFee")"

register "uint" "UINT_MIX_TALENT" "$(loadConf ".apostle.mixTalent")"

register "uint" "UINT_APOSTLE_BID_WAITING_TIME" "$(loadConf ".apostle.bidWaitingTime")"
