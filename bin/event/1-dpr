#!/usr/bin/env bash

set -e

p() { printf "%-66s %-66s\n" "$1" "$2"; }

# darwinia pr event 3
ids=(
"0x2a040001040001010000000000000004000000000000000000000000000002d8"
"0x2a040001040001010000000000000004000000000000000000000000000004d8"
"0x2a04000104000101000000000000000400000000000000000000000000000334"
"0x2a0400010400010100000000000000040000000000000000000000000000062b"
"0x2a04000104000101000000000000000400000000000000000000000000000662"
  )

addrs=(
"0x989f4bf7C0325A24938b144f1d2F215440DcB455"
"0xA24A834AB894Ad94B59bcE37b320f80E3371D1c9"
"0x306248F8b7da9F35514067a12c59Be0Ef39166e6"
"0x2c263D07b359c0f360dfAF31460594136a37a7ec"
"0x9704f55Aa24237625F4A23A0AC2B31a9Cf22fAb8"
  )

# claim land from genesis holder
# for id in "${ids[@]}"; do
#   echo $id
#   evo mkt-gen claim $id --chain heco
#   sleep 3s
# done

from=0x7aE77149ed38c5dD313e9069d790Ce7085caf0A6
for (( i=0; i<${#ids[@]}; i++ ));
do
  to="${addrs[$i]}"
  id="${ids[$i]}"
  p "$id" "$to" 
  evo cmn-tkn transferFrom "$from" "$to" "$id" --chain heco
  sleep 3s
done

