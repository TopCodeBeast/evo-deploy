#!/usr/bin/env bash

set -e

p() { printf "%-66s %-66s\n" "$1" "$2"; }

# darwinia pr event 3
ids=(
"0x2a04000104000101000000000000000400000000000000000000000000000743"
"0x2a04000104000101000000000000000400000000000000000000000000000322"
"0x2a0400010400010100000000000000040000000000000000000000000000024d"
"0x2a040001040001010000000000000004000000000000000000000000000000d0"
"0x2a040001040001010000000000000004000000000000000000000000000000be"
  )

addrs=(
"0xec384b763895918c20A3E39Bd74207b53B51E6fd"
"0xec384b763895918c20A3E39Bd74207b53B51E6fd"
"0xec384b763895918c20A3E39Bd74207b53B51E6fd"
"0xec384b763895918c20A3E39Bd74207b53B51E6fd"
"0xec384b763895918c20A3E39Bd74207b53B51E6fd"
  )

# claim land from genesis holder
# for id in "${ids[@]}"; do
#   echo $id
#   evo mkt-gen claim $id --chain heco
#   sleep 3s
# done

from=0x7aE77149ed38c5dD313e9069d790Ce7085caf0A6
for (( i=0; i<${#ids[@]}; i++ ));
do
  to="${addrs[$i]}"
  id="${ids[$i]}"
  p "$id" "$to" 
  # evo cmn-tkn owner $id --chain heco
  evo cmn-tkn transferFrom "$from" "$to" "$id" --chain heco
  sleep 3s
done

