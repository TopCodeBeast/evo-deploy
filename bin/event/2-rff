#!/usr/bin/env bash

set -e

p() { printf "%-66s %-66s\n" "$1" "$2"; }

# event 1 heco
ids=(
0x2a05000105000101000000000000000500000000000000000000000000000783
0x2a05000105000101000000000000000500000000000000000000000000000763
0x2a0500010500010100000000000000050000000000000000000000000000076f
  )

addrs=(
0x5b4296d95c4b894b3156b565ce6077f90322db49
0x5b4296d95c4b894b3156b565ce6077f90322db49
0x5b4296d95c4b894b3156b565ce6077f90322db49
  )

chain=polygon
# claim land from genesis holder
# for id in "${ids[@]}"; do
#   echo $id
#   evo mkt-gen claim $id --chain $chain
# done

from=0x7aE77149ed38c5dD313e9069d790Ce7085caf0A6
for (( i=0; i<${#ids[@]}; i++ ));
do
  to="${addrs[$i]}"
  id="${ids[$i]}"
  p "$id" "$to"
  evo cmn-tkn transferFrom "$from" "$to" "$id" --chain $chain
done

